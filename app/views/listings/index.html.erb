<div class='jumbotron'>
  <h1> Los Mejores Articulos del Mundo para ti! <h1>
  <h2> Especialmente para ti!</h2>
</div>


<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        
       
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <p><%= "Sold by #{listing.user.name}" %><p>

         </div>
       </div>
     </div>
    <% end %>
  </div>
</div>


<br>
<% if (user_signed_in?) %>
   <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>

